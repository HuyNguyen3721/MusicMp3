    <TextView
        android:background="#6A0D73"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
        <LinearLayout
            android:layout_weight="3"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivbackNoti"
                android:layout_weight="1"
                android:src="@drawable/baseline_skip_previous_purple_500_48dp"
                android:layout_width="0dp"
                android:layout_height="45dp"/>
            <ImageView
                android:id="@+id/ivplayNoti"
                android:layout_weight="1"
                android:src="@drawable/baseline_play_arrow_purple_500_48dp"
                android:layout_width="0dp"
                android:layout_height="45dp"/>
            <ImageView
                android:id="@+id/ivnextNoti"
                android:layout_weight="1"
                android:src="@drawable/baseline_skip_next_purple_500_48dp"
                android:layout_width="0dp"
                android:layout_height="45dp"/>

        </LinearLayout>
    </LinearLayout>
