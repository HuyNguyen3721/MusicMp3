<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="com.example.appmusicmp3.item.Item_song" />
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:weightSum="3"
        android:background="#F6F6F5"
        >
        <TextView
            android:textSize="14sp"
            android:padding="10dp"
            android:textColor="#D12937"
            android:textStyle="bold"
            android:text="name"
            app:setText="@{data.songName}"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="14sp"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#D12937"
            android:textStyle="bold"
            android:text="name"
            app:setText="@{data.singer}"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_toLeftOf="@+id/iconaddlist"
                android:padding="2dp"
                android:src="@drawable/headphone"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:id="@+id/iconaddlist"
                android:layout_toLeftOf="@+id/iconshare"
                android:padding="2dp"
                android:src="@drawable/addlist"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:id="@+id/iconshare"
                android:layout_alignParentRight="true"
                android:padding="2dp"
                android:src="@drawable/share"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>
    </LinearLayout>
        <View
            android:background="#D12937"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>
</layout>